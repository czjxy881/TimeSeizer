<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.app.MainActivity$PlaceholderFragment"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bigg2"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="今日总结"
            android:textSize="45dp"
            android:gravity="center"
            android:layout_marginEnd="10px"
            android:id="@+id/tvzjnumber"/>
    </LinearLayout>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:stretchColumns="0,1">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日完成"
            android:textColor="#ff0c18fd"
            android:textSize="33dp"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:background="@drawable/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被打断次数"
            android:textColor="#ffff211a"
            android:textSize="33dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <TextView
            android:background="@drawable/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvfqnumber"
            android:textColor="#ff0c18fd"
            android:text="27"
            android:textSize="70dp"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:background="@drawable/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvddnumber"
            android:textColor="#ffff211a"
            android:text="5"
            android:textSize="70dp"
            android:gravity="center"
            android:layout_weight="1"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/left"
        android:layout_weight="0.77">
        <TextView
            android:layout_marginTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="自我评价"
            android:gravity="center"
            android:layout_weight="1"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="false"
            android:stepSize="0.5"
            android:rating="0"
            android:layout_gravity="center"
            android:id="@+id/rbmyscore"
            android:layout_weight="1"
            android:layout_marginBottom="5dip"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="8.20"
            android:background="@drawable/summary1"
            android:layout_gravity="center">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etsummary"
                android:hint="一句话评价自己吧"
                android:gravity="center"
                android:layout_weight="1"/>
            </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnpingjia"
        android:layout_marginBottom="5dip"
        android:textSize="16dp"
        android:text="完成评价"
        android:background="@drawable/buttonselector"
        android:shadowColor="@color/Shadow"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="5.0"/>
</LinearLayout>

