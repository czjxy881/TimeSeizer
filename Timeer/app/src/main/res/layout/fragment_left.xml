<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/Grey"
    tools:context="com.example.app.MainActivity$PlaceholderFragment"
    >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="今日总结"
            android:textSize="45dp"
            android:gravity="center"

            android:layout_weight="2"
            android:id="@+id/tvzjnumber"/>

<LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/card_top"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="今日完成"
            android:textColor="@color/DarkBlue"
            android:textSize="33dp"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:background="@drawable/card_bottom"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/tvfqnumber"
            android:textColor="@color/DarkBlue"
            android:text="27"
            android:textSize="70dp"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:layout_weight="1">
        <TextView
            android:background="@drawable/card_top"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="中断次数"
            android:textColor="@android:color/holo_red_dark"

            android:textSize="33dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <!--android:textColor="#ffff211a"-->
        <TextView
            android:background="@drawable/card_bottom"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/tvddnumber"
            android:textColor="@android:color/holo_red_dark"
            android:text="5"
            android:textSize="70dp"
            android:gravity="center"
            android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="30dp"
            android:text="自我评价"
            android:gravity="center"
            android:layout_weight="1"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0"
            android:id="@+id/rbmyscore"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:mirrorForRtl="false"
            android:layout_marginBottom="5dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/card"
            android:layout_weight="2"
            android:layout_gravity="center">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etsummary"
                android:hint="一句话评价自己吧"
                android:layout_gravity="center"
                android:gravity="center" />
        </FrameLayout>


    </LinearLayout>
    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/btnpingjia"
        android:textSize="16dp"
        android:text="完成评价"
        android:background="@drawable/buttonselector"
        android:shadowColor="@color/Shadow"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="5.0"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />
</LinearLayout>

