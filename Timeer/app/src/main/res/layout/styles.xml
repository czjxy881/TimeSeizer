<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.MainActivity">
    <com.example.app.Note.DateLine
        android:textColor="#ffff0000"
        android:gravity="center"
        android:id="@id/changedateview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_centerHorizontal="true" />
    <com.example.app.Note.TextViewLine
        android:id="@+id/changecontentview"
        android:typeface="serif"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="68.0dip"
        android:layout_below="@+id/changedateview"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="6.0dip" /><!-- android:textSize="15.0sp" android:textColor="#ff000000" -->
    <Button android:id="@+id/stylebutton1"
        android:focusable="false"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_above="@+id/changecontentview"
        android:layout_alignLeft="@id/changecontentview" />
    <Button android:id="@+id/stylebutton2"
        android:focusable="false"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_above="@id/changecontentview"
        android:layout_alignRight="@id/changecontentview" />
    <Button android:id="@+id/stylebutton3"
        android:focusable="false"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_below="@+id/changecontentview"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>