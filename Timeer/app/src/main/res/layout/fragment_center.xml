<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.app.MainActivity$PlaceholderFragment"
    android:background="@color/Grey"
    >
     <DigitalClock
           android:id="@+id/myClock"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/Clock_Size"
           android:layout_gravity="center_horizontal"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:shadowColor="@color/Shadow"
           android:shadowDx="2.0"
           android:shadowDy="2.0"
           android:shadowRadius="10.0"
         />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前任务"
                android:id="@+id/tvnowworke"
                android:textSize="18dp"
                android:layout_below="@+id/myClock"
                android:layout_centerHorizontal="true" />


            <com.example.app.CircleProgressBar
                android:id="@+id/breakBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_start"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"


                android:layout_below="@+id/tvnowworke"
                android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/ReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"  />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="开始"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignBottom="@+id/ReturnButton"
        android:layout_alignRight="@+id/ReturnButton"
        android:layout_alignEnd="@+id/ReturnButton" />
</RelativeLayout>
