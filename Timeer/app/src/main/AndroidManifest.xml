<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timerseizer" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.timerseizer.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Base.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.timerseizer.TabActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Base.AppCompat.Light" />
        <activity
            android:name="com.example.timerseizer.Settings"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Base.AppCompat.Light" />


    </application>

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
